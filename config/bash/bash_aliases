alias _='sudo'
alias _i='sudo -i'

alias ll='ls -lh'
alias la='ls -lha'
alias l='ls -CF'

alias dd='dd status=progress'

alias p3='python3'
alias p='python'

alias viqt='nvim-qt'

#When quitting ranger, the terminal will cd to the last location.
alias rg='. ranger'

alias v='nvim'

alias bat='batcat'
alias f="fzf --preview 'batcat --color=always --style=numbers --line-range=:500 {}'"

alias gits="git status"
alias gitd="git diff"

alias q="exit"
